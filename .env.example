# Django Configuration
# Generate a new secret key with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-CHANGE-ME-IN-PRODUCTION

# Environment: development, production, test
DJANGO_SETTINGS_MODULE=config.settings.development

# Debug mode (never set to True in production)
DEBUG=True

# Allowed hosts (comma-separated list for production)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Development (SQLite): Leave empty or comment out
# Production (PostgreSQL on Railway): DATABASE_URL=postgresql://user:password@host:port/dbname
DATABASE_URL=

# Email Configuration (for contact form)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Google Maps API Key
# Get from: https://console.cloud.google.com/ -> Enable Maps Embed API
GOOGLE_MAPS_API_KEY=

# Security Settings (Production only)
SECURE_SSL_REDIRECT=False
